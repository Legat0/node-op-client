{
  "compilerOptions": {
    "declaration": true,
    "types": [
      "jest",
      "node"
    ],
    "lib": [
      "ES2020"
    ],
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": true,
    "strictNullChecks": true,
    "baseUrl": "src"
  },
  "include": [
    "examples.ts",
    "src/**/*",
    "example/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
