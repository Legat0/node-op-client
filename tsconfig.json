{
  "compilerOptions": {
    "declaration": true,
    "types": [
      "jest",
      "node"
    ],
    "esModuleInterop": true,
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": true,

    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }],

    "baseUrl": "src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
